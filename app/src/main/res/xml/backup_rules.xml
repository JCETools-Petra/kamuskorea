<?xml version="1.0" encoding="utf-8"?>
<!--
   Backup rules for Android API < 31
   Excludes sensitive user data from Google Cloud backups
   See https://developer.android.com/guide/topics/data/autobackup
-->
<full-backup-content>
    <!-- Exclude user-specific gamification DataStore -->
    <!-- DataStore files are stored in the 'files/datastore' directory -->
    <exclude domain="file" path="datastore/user_*_gamification.preferences_pb" />

    <!-- Exclude global settings DataStore (contains user preferences) -->
    <exclude domain="file" path="datastore/settings.preferences_pb" />

    <!-- Exclude local database (contains favorites and user data) -->
    <exclude domain="database" path="kamus_korea.db" />
    <exclude domain="database" path="kamus_korea.db-shm" />
    <exclude domain="database" path="kamus_korea.db-wal" />

    <!-- Exclude cache directory -->
    <exclude domain="file" path="cache/" />

    <!-- Include shared preferences (if needed for app configuration) -->
    <!-- <include domain="sharedpref" path="." /> -->
</full-backup-content>
