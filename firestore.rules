rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to the ebooks collection for all users
    match /ebooks/{ebookId} {
      allow read: if true;
      allow write: if false; // It's a good practice to explicitly deny writes unless needed
    }

    // You can keep your other rules for user profiles, etc.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}